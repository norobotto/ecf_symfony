{% extends 'base.html.twig' %}

{% block title %}Computer
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title text-center mt-3">Computer</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ computer.id }}</td>
				</tr>
				<tr>
					<th>Model</th>
					<td>{{ computer.model }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ computer.description }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ computer.price }}</td>
				</tr>
				<tr>
					<th>ReleaseYear</th>
					<td>{{ computer.releaseYear }}</td>
				</tr>
				<tr>
					<th>SerialNumber</th>
					<td>{{ computer.serialNumber }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ computer.image }}</td>
				</tr>
				<tr>
					<th>Is_visible</th>
					<td>{{ computer.isVisible ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_computer_index') }}">back to list</a>

		<a href="{{ path('app_computer_edit', {'id': computer.id}) }}">edit</a>

		{{ include('computer/_delete_form.html.twig') }}
	</div>
{% endblock %}
