{% extends 'base.html.twig' %}
{% block title %}Marques d'ordinateur
{% endblock %}

{% block body %}
	<h1 class="title text-center mt-3">Ordinateurs de la marque :
		{{marq.name}}</h1>
	<table class="table">
		<tbody>
			{% for brand in brands %}
				<tr>
					<td>
						<a href="{{ path('tab', {'id':brand.id}) }}" class="link-dark">{{ brand.name }}</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="cards-container">
		<div class="cards">
			{% for computer in marq.computers %}
				<div
					class="card" style="width: 18rem;">
					<img class="card-img-top" src="{{computer.image}}" alt="Card image cap"> 
					<div class="card-body">
						<h5 class="card-title">
							{{computer.brand.name}}
						</h5>
						<p class="card-text">
							{{computer.description|raw}}
						</p>
						<a href="{{ path('app_computer_show', {'id': computer.id}) }}" class="btn btn-success d-flex align-items-center">Voir en d√©tail</a>
						{% if app.user %}
							{% if computer.isUserfav(app.user) %}
								<a href="{{ path('app_computer_fav', {'id': computer.id}) }}">
									<i class="fa-solid fa-heart"></i>
								</a>
							{% else %}
								<a href="{{ path('app_computer_fav', {'id': computer.id}) }}">
									<i class="fa-regular fa-heart"></i>
								</a>
							{% endif %}
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
